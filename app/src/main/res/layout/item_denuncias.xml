<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Denuncia"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/item_denuncia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="14dp"
        android:layout_toRightOf="@id/item_denuncia"/>

    <TextView
        android:id="@+id/item_denuncia_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:layout_below="@id/item_denuncia_title"
        android:layout_toRightOf="@id/item_denuncia"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/item_denuncia"
        android:background="#000000"/>
</RelativeLayout>